---
interface Props {
  time: string;
}

const { time } = Astro.props;
---

<article class="grid grid-cols-[48px_1fr] gap-3 border-b-2 p-6 pb-12">
  <img class="h-12 w-12 rounded-full" src="/me.png" alt="My profile photo" />
  <div>
    <div>
      <span class="font-bold mr-1">Michelle Sánchez</span>
      <span class="text-gray-600">@Miche-san</span>
      <span class="text-gray-600">·</span>
      <span class="text-gray-600">{time}</span>
    </div>
    <slot />
  </div>
</article>
