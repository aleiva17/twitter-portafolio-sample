---
import Header from "../shared/components/Header.astro";
import Footer from "../shared/components/Footer.astro";

interface Props {
  title: string;
  activeLink: string;
}

const { title, activeLink } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="grid place-items-center">
    <div
      class="grid grid-rows-[auto_1fr_auto] border-x-2 max-w-screen-md w-full min-h-screen"
    >
      <Header activeLink={activeLink} />
      <main>
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
