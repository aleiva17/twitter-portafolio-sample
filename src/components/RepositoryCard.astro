---
import type { Repository } from "../models/Repository";
interface Props {
  repository: Repository;
}

const { repository } = Astro.props;
---

<div
  class="grid grid-cols-1 md:grid-cols-[256px_1fr] bg-white border border-gray-200 drop-shadow-md rounded-lg w-full"
>
  <img
    class="h-64 w-full rounded-t-lg md:rounded-tr-none md:rounded-l-lg object-cover object-center"
    src={repository.imageUrl}
    alt={`${repository.name} image`}
  />
  <div class="flex flex-col justify-between p-5">
    <h2 class="mb-2 text-2xl font-bold text-gray-900">{repository.name}</h2>
    <p class="mb-3 font-normal text-gray-700">{repository.description}</p>
    <div class="flex items-center gap-1">
      <svg
        class="w-6 h-6 fill-yellow-500"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z"
        ></path>
      </svg>
      <p>Stars: {repository.stars}</p>
    </div>
    <a
      href="#"
      class="mt-4 inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-pink-600 rounded-lg hover:bg-pink-700 duration-300 w-fit"
    >
      Abrir repositorio
      <svg
        class="rtl:rotate-180 w-3.5 h-3.5 ms-2"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"></path>
      </svg>
    </a>
  </div>
</div>
